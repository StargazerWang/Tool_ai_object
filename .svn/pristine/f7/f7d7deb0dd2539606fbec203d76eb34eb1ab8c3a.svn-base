
.content {
  flex: 1;
  min-height: calc(100vh - var(--header-height));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 36px;
}
.nav {
  width: 500px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto 60px;
}
.steps {
  width: 62px;
  height: 62px;
  background-color: rgba(77, 57, 182, 0.1);
  border-radius: 50%;
  cursor: pointer;
  padding: 6px;
  position: relative;
}
.steps .txt {
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  font-size: 18px;
  color: #757575;
  position: absolute;
  top: -36px;
  left: 50%;
  transform: translateX(-50%);
}
.steps .num {
  width: 100%;
  height: 100%;
  font-size: 24px;
  color: #757575;
  line-height: 34px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.line {
  flex: 1;
  height: 6px;
  background-color: rgba(77, 57, 182, 0.1);
}

.child-area {
  width: 100%;
  padding: 40px;
}