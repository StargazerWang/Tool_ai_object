
.content {
  flex: 1;
  min-height: calc(100vh - var(--header-height));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.chess-content {
  width: 1172px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  transition: all 0.8s;
  position: relative;
}
.chess-content.fold {
  width: 600px;
}

.chess-board-box {
  width: 600px;
  border: 4px solid #4D39B6;
  border-radius: 18px;
  box-shadow:  0px 12px 48px 0px rgba(77, 57, 182, 0.2);
  background: #F6F6FC;
  padding-top: 20px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}
.chess-top {
  width: 100%;
  height:  34px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
}
.chess-top h4 {
  flex: 1;
  font-size: 24px;
  color: #333333;
  font-weight: 400;
}

.chess-top .tips {
  width: min-content;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.chess-top .tips span {
  width: max-content;
  font-size: 18px;
  line-height: 28px;
  color: #757575;
  margin-right: 8px;
}
.chess-top .tips i {
  width: 28px;
  height: 28px;
  display: block;
  border-radius: 4px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  background-color: #fff;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 16px auto;
}
.chess-top .tips i.x {
  background-image: url(./../images/x-icon.png);
}
.chess-top .tips i.o {
  background-image: url(./../images/o-icon.png);
}

.chess-board-info {
  width: 100%;
  height: 592px;
  background-color: #f5f5f5;
  padding: 20px;
  border-radius: 18px;
  margin-top: 4px;
}

.empty-box {
  width: 20px;
  height: 658px;
} 

.arrow {
  width: 80px;
  height: 80px;
  display: block;
  background: url(./../../images/arrow.png) no-repeat center;
  background-size: 100%;
  position: absolute;
  left: 52.9%;
  z-index: 2;
}

.chess-record-box {
  width: 452px;
  padding-top: 24px;
  border-radius: 18px;
  box-shadow:  0px 12px 48px 0px rgba(13,13,13,0.14);
  background: #FFFFFF;
  position: absolute;
  top: 0;
  right: 0;
}

.chess-record {
  width: 100%;
  height: 464px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 12px;
  background-color: #fff;
  padding: 24px;
  border-radius: 18px;
}

.chess-record li {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(77, 57, 182, 0.1);
  border-radius: 12px;
  background: #f6f6f6;
  position: relative;
}
.chess-record li .num {
  font-size: 52px;
  color: #757575;
  margin-bottom: 6px;
}
.chess-record li .txt {
  width: 100%;
  height: 26px;
  font-size: 18px;
  color: #757575;
  text-align: center;
  position: absolute;
  top: 90px;
  left: 0;
}

.machine-code {
  width: 100%;
}
.machine-code h4 {
  font-size: 24px;
  color: #333333;
  font-weight: 400;
  margin-top: 12px;
  padding-left: 24px;
}
.machine-code ul {
  width: 100%;
  height: 88px;
  display: flex;
  align-items: center;
  padding: 24px;
}
.machine-code ul li {
  width: 42px;
  height: 100%;
  font-size: 24px;
  line-height: 24px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  background-color: #F6F6FC;
  border-width: 3px;
  border-style: solid;
  margin-right: 4px;
}
.machine-code ul li:last-child {
  margin: 0;
}

.bottom {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 48px;
}
.start-btn {
  width: 352px;
  height: 74px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  color: #fff;
  border-radius: 12px;
  background: #4D39B6;
  border: none;
  cursor: pointer;
}
.start-btn[disabled] {
  background-color: rgba(77, 57, 182, 0.5);
  cursor: no-drop;
}
.start-btn:not([disabled]):hover {
  box-shadow:  0px 8px 16px 0px rgba(77, 57, 182, 0.2);
}

.download-btn {
  width: auto;
  display: flex;
  align-items: center;
  font-size: 18px;
  color: #333333;
  background-color: transparent;
  border: none;
  padding: 0 4px;
  margin-top: 12px;
  cursor: pointer;
}
.download-btn[disabled] {
  cursor: no-drop;
}
.download-btn:hover {
  color: rgba(51, 51, 51, 0.5);
}

.download-btn i {
  width: 18px;
  height: 18px;
  display: block;
  background: url(./../images/download.png) no-repeat center;
  margin-right: 8px;
}
.download-btn:hover i {
  background-image: url(./../images/download-hv.png);
}


@media screen and (max-width: 1920px) {
  .chess-content {
    width: 672px;
  }
  .chess-content.fold {
    width: 342px;
  }

  .chess-board-box {
    width: 342px;
    padding-top: 12px;
  }

  .chess-top {
    height: 22px;
  }
  .chess-top h4 {
    font-size: 16px;
  }
  .chess-top .tips span {
    font-size: 14px;
  }
  .chess-top .tips i {
    width: 20px;
    height: 20px;
    background-size: 12px auto;
  }

  .chess-board-info {
    height: 338px;
    padding: 12px;
  }

  .empty-box {
    width: 12px;
    height: 384px;
  }

  .arrow {
    width: 48px;
    height: 48px;
  }

  .chess-record-box {
    width: 258px;
    padding-top: 16px;
  }

  .chess-record {
    height: 258px;
    padding: 16px;
  }
  .chess-record li .num {
    font-size: 24px;
  }
  .chess-record li .txt {
    font-size: 14px;
    height: 14px;
    line-height: 14px;
    top: 46px;
  }

  .machine-code h4 {
    font-size: 16px;
  }
  .machine-code ul {
    height: 53px;
    padding: 16px;
  }
  .machine-code ul li {
    width: 21.6px;
    font-size: 16px;
    line-height: 16px;
    border-radius: 4px;
    border-width: 2px;
  }

  .bottom {
    margin-top: 24px;
  }

  .start-btn {
    width: 242px;
    height: 44px;
    font-size: 14px;
  }

  .download-btn {
    font-size: 14px;
  }
  .download-btn i {
    width: 16px;
    height: 16px;
  }
}