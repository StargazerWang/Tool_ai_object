.flybird-content {
  flex: 1;
  min-height: calc(100vh - var(--header-height));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content {
  width: 1056px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  transition: all 0.8s;
  position: relative;
}

.game-content {
  width: 468px;
  border: 4px solid #4D39B6;
  border-radius: 18px;
  box-shadow:  0px 12px 48px 0px rgba(77, 57, 182, 0.2);
  background: #F6F6FC;
  padding-top: 20px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}


.empty-box {
  width: 20px;
  height: 861px;
}

.arrow {
  width: 80px;
  height: 80px;
  display: block;
  background: url(./../../images/arrow.png) no-repeat center;
  background-size: 100%;
  position: absolute;
  left: 50%;
  z-index: 2;
  transform: translateX(-50%);
}


.state-content {
  width: 468px;
  padding-top: 24px;
  border-radius: 18px;
  box-shadow:  0px 12px 48px 0px rgba(13,13,13,0.14);
  background: #FFFFFF;
  position: absolute;
  top: 0;
  right: 0;
}